@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gelen Kutusu</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Konu</th>
                                <th>Gönderen</th>
                                <th>Tarih</th>
                                <th>Mesajı Aç</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
								<th>@item.MessageID</th>
								<td>@item.Subject</td>
								
                                <td><span class="badge badge-info">@item.SenderUser.WriterName</span></td>

								<td> @(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>

                <a class="btn btn-gradient-success btn-icon-text" asp-controller="Blog" asp-action="BlogAdd"><i class="mdi mdi-file-plus btn-icon-prepend"></i> Yeni Mesaj Oluştur</a>
            </div>
        </div>
    </div>
</div>

