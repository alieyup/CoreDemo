@using EntityLayer.Concrete
@model List<Blog>

	@foreach (var item in Model)
{
	
<div class="blog-grids row mb-3">
		<div class="col-md-5 blog-grid-left">
			<a href="/Blog/BlogReadAll/@item.BlogID/">
				<img src="@item.BlogThumbnailImage" class="img-fluid" alt="@item.BlogTitle">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">

			<h5>
				<a href="/Blog/BlogReadAll/@item.BlogID/">@item.BlogTitle.Substring(0,item.BlogTitle.Substring(0,40).LastIndexOf(" "))...</a>
			</h5>
			<div class="sub-meta">
				<span>
					<i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd MMMM yyyy"))
				</span>
			</div>
		</div>

	</div>

}