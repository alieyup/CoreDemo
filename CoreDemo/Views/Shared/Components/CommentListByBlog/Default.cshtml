@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
	<h4>Yorumlar</h4>
	@if (Model.Count() > 0)
	{
		@foreach (var item in Model)
		{
			<div class="media">
				<img src="~/coreblogtema/images/t1.jpg" alt="" class="img-fluid" />
				<div class="media-body">
					<h5 class="mt-0">
						@item.CommentUserName
						<br /> @item.CommentDate
						<br />@item.CommentTitle
					</h5>
					<p>
						@item.CommentContent
					</p>
				</div>
			</div>
		}
	}
	else
	{
		<h2>İlk Yorumu Siz Yapın!</h2>
	}
</div>
