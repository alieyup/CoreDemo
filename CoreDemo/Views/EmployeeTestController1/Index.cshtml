@using static CoreDemo.Controllers.EmployeeTestController1;
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı Soyadı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Name</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@item.ID" asp-controller="EmployeeTestController1" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="DeleteEmployee" asp-route-id="@item.ID" asp-controller="EmployeeTestController1" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddEmployee" asp-controller="EmployeeTestController1" class="btn btn-outline-primary">Yeni Çalışan Girişi</a>

