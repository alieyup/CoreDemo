@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Blog Ekleme</h4>
                @Html.Label("Kategori Adı")
                @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control"})
                @Html.ValidationMessageFor(x=>x.CategoryName)
                <br /><br>
                @Html.Label("Kategori Açıklaması")
                @Html.TextAreaFor(x=>x.CategoryDescription, 15,3, new {@class="form-control"})
                @Html.ValidationMessageFor(x=>x.CategoryDescription)
                <br />
                <button type="submit" class="btn btn-gradient-success btn-icon-text"><i class="mdi mdi-file-plus btn-icon-prepend"></i>Kategori Ekle</button>
            </div>
        </div>
    </div>
}

